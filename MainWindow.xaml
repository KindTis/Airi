<Window x:Class="Airi.MainWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Airi" Height="1000" Width="1510"
        Background="{DynamicResource ShellBackgroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="ShellBackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1C1C1E"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="ListHoverBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="ListSelectedBrush" Color="#374151"/>
        <SolidColorBrush x:Key="CommandBarBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="StatusBarBrush" Color="#181818"/>
    </Window.Resources>

    <Grid Background="{DynamicResource ShellBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top command bar -->
        <Border Grid.Row="0" Background="{StaticResource CommandBarBrush}" Margin="24" Padding="20" CornerRadius="16">
            <Grid IsEnabled="{Binding CanUseCommandBar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Height="42" Margin="0,0,16,0" Padding="12"
                         Background="#232323" BorderBrush="#2F2F2F" Foreground="{StaticResource PrimaryTextBrush}"
                         CaretBrush="{StaticResource PrimaryTextBrush}" VerticalContentAlignment="Center"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1" Width="140" Height="42" Margin="0,0,12,0" Padding="12"
                        Content="{Binding TitleSortLabel}"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding SortByTitleCommand}"/>

                <Button Grid.Column="2" Width="140" Height="42" Margin="0,0,12,0" Padding="12"
                        Content="{Binding DateSortLabel}"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding SortByDateCommand}"/>
                <Button Grid.Column="3" Width="140" Height="42" Margin="0,0,12,0" Padding="12"
                        Content="Random Play"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding RandomPlayCommand}"/>

                <Button Grid.Column="4" Width="160" Height="42" Padding="12"
                        Content="Fetch Metadata"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding FetchMetadataCommand}"/>
            </Grid>
        </Border>

        <!-- Main layout -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Actor list -->
            <Border Grid.Column="0" CornerRadius="16" Background="{StaticResource PanelBrush}">
                <ListBox ItemsSource="{Binding Actors}"
                         SelectedItem="{Binding SelectedActor, Mode=TwoWay}"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="16"
                         Foreground="{StaticResource SecondaryTextBrush}"
                         HorizontalContentAlignment="Stretch"
                         VerticalContentAlignment="Center">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,4"/>
                            <Setter Property="Padding" Value="16"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" CornerRadius="12" Background="{TemplateBinding Background}" Padding="0">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ListHoverBrush}"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ListSelectedBrush}"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <!-- Video grid -->
            <ListBox x:Name="VideoList"
                     Grid.Column="2"
                     ItemsSource="{Binding FilteredVideos}"
                     SelectedItem="{Binding SelectedVideo, Mode=TwoWay}"
                     MouseDoubleClick="VideoList_MouseDoubleClick"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="False"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260" Height="250" Margin="12" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="12"
                                BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                            <Setter Property="Opacity" Value="0.45"/>
                                            <Setter Property="BorderBrush" Value="#FFEF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <Grid Height="150" Margin="0,0,0,10" ClipToBounds="True">
                                    <Image Source="{Binding ThumbnailUri}" Stretch="UniformToFill"/>
                                    <TextBlock Text="Missing" Foreground="#FFEF4444" Background="#801B1B1B" Padding="6,2" Margin="8" FontWeight="SemiBold"
                                               HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,4" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding ReleaseLabel}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="{StaticResource StatusBarBrush}" Padding="16" Margin="24" CornerRadius="12">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource PrimaryTextBrush}"/>
        </Border>
    </Grid>
</Window>


