<Window x:Class="Airi.MainWindow"
        WindowStartupLocation="CenterScreen" PreviewKeyDown="OnPreviewKeyDown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Airi"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Airi" Height="1000" Width="1500"
        Background="{DynamicResource ShellBackgroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="ShellBackgroundBrush" Color="#0F111C"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#151828"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="CardBrush" Color="#151828"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#2E3350"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#96A1C2"/>
        <SolidColorBrush x:Key="ListHoverBrush" Color="#1E2234"/>
        <SolidColorBrush x:Key="ListSelectedBrush" Color="#2E3350"/>
        <SolidColorBrush x:Key="CommandBarBrush" Color="#151828"/>
        <SolidColorBrush x:Key="StatusBarBrush" Color="#151828"/>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="Transparent" BorderThickness="0" Padding="0">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="VideoTooltipTemplate" DataType="{x:Type local:VideoItem}">
            <Border Background="#151828" CornerRadius="20" Padding="20" BorderBrush="#2E3350" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="28" ShadowDepth="0" Opacity="0.45"/>
                </Border.Effect>
                <StackPanel MaxWidth="480">
                    <Border Height="350" CornerRadius="18" ClipToBounds="True" Margin="0,0,0,16">
                        <Image Source="{Binding ThumbnailUri}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding Title}" FontSize="26" FontWeight="SemiBold" Foreground="White" TextWrapping="Wrap"/>
                    <StackPanel Margin="0,6,0,8">
                        <TextBlock Foreground="#96A1C2" FontSize="14"
                                   Text="{Binding ReleaseLabel, Mode=OneWay, StringFormat='출시일: {0}'}"/>
                        <TextBlock Foreground="#96A1C2" FontSize="14" Margin="0,2,0,0"
                                   Text="{Binding CreatedLabel, Mode=OneWay, StringFormat='생성일: {0}'}"/>
                    </StackPanel>
                    <Separator Background="#2E3350" Margin="0,0,0,16" Height="1"/>
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Description, Mode=OneWay}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Description, Mode=OneWay}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="&#xE8D2;" FontFamily="Segoe MDL2 Assets" Foreground="#4D8FFF" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="내용" Foreground="#C7CEE4" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Description, Mode=OneWay}" TextWrapping="Wrap" Foreground="#E8ECF9" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,12">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=Actors.Count, Mode=OneWay}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" Foreground="#4D8FFF" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="배우" Foreground="#C7CEE4" FontWeight="SemiBold"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Actors, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E2234" CornerRadius="12" Padding="10,4" Margin="0,0,8,8">
                                        <TextBlock Foreground="#E8ECF9" FontSize="13" Text="{Binding Mode=OneWay}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=Tags.Count, Mode=OneWay}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" Foreground="#4D8FFF" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="태그" Foreground="#C7CEE4" FontWeight="SemiBold"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Tags, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E2234" CornerRadius="12" Padding="10,4" Margin="0,0,8,8">
                                        <TextBlock Foreground="#E8ECF9" FontSize="13">
                                            <Run Text="#"/>
                                            <Run Text="{Binding Mode=OneWay}"/>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel Margin="0,12,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SourcePath, Mode=OneWay}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SourcePath, Mode=OneWay}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" Foreground="#4D8FFF" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="위치" Foreground="#C7CEE4" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SourcePath, Mode=OneWay}" TextWrapping="Wrap" Foreground="#E8ECF9" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{DynamicResource ShellBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top command bar -->
        <Border Grid.Row="0" Background="{StaticResource CommandBarBrush}" Margin="24, 12, 24, 12" Padding="20" CornerRadius="16">
            <Grid IsEnabled="{Binding CanUseCommandBar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Height="42" Margin="0,0,16,0">
                    <TextBox x:Name="SearchTextBox" Height="42" Padding="12,0,42,0"
                             Background="#1E2234" BorderBrush="#2E3350" Foreground="{StaticResource PrimaryTextBrush}"
                             CaretBrush="{StaticResource PrimaryTextBrush}" VerticalContentAlignment="Center"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Width="28" Height="28" Margin="0,0,8,0"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#2E3350" Foreground="White" BorderBrush="Transparent"
                            Padding="0" Focusable="False"
                            Command="{Binding ClearSearchCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchQuery}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchQuery}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="&#xE894;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </Button>
                </Grid>

                <ComboBox Grid.Column="1" Width="180" Height="42" Margin="0,0,12,0" Padding="12,0"
                          ItemsSource="{Binding SortOptions}"
                          SelectedItem="{Binding SelectedSortOption}"
                          DisplayMemberPath="Label"
                          Background="#1E2234"
                          BorderBrush="#2E3350"
                          Foreground="{StaticResource PrimaryTextBrush}"
                          VerticalContentAlignment="Center"/>
                
                <Button Grid.Column="2" Width="140" Height="42" Margin="0,0,12,0" Padding="12"
                        Content="Random Play"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding RandomPlayCommand}"/>

                <Button Grid.Column="3" Width="160" Height="42" Margin="0,0,12,0" Padding="12"
                        Content="Fetch Metadata"
                        Background="{StaticResource AccentBrush}" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding FetchMetadataCommand}"/>
                
                <ToggleButton Grid.Column="4" Width="200" Height="42" Padding="12"
                              Content="Missing Metadata Only"
                              IsChecked="{Binding ShowMissingMetadataOnly}"
                              Background="#1E2234"
                              Foreground="{StaticResource PrimaryTextBrush}"
                              BorderBrush="#2E3350">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="14"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#242A3D"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#1E2234"/>
                                    <Setter Property="Foreground" Value="#5E6585"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </Grid>
        </Border>

        <!-- Main layout -->
        <Grid Grid.Row="1" Margin="24,0,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Actor list -->
            <Border Grid.Column="0" CornerRadius="16" Background="{StaticResource PanelBrush}">
                <ListBox ItemsSource="{Binding Actors}"
                         SelectedItem="{Binding SelectedActor, Mode=TwoWay}"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="16"
                         Foreground="{StaticResource SecondaryTextBrush}"
                         HorizontalContentAlignment="Stretch"
                         VerticalContentAlignment="Center">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,4"/>
                            <Setter Property="Padding" Value="16"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" CornerRadius="12" Background="{TemplateBinding Background}" Padding="0">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ListHoverBrush}"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ListSelectedBrush}"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <!-- Video grid -->
            <ListBox x:Name="VideoList"
                     Grid.Column="2"
                     ItemsSource="{Binding FilteredVideos}"
                     SelectedItem="{Binding SelectedVideo, Mode=TwoWay}"
                     MouseDoubleClick="VideoList_MouseDoubleClick"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="False"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="ToolTipService.IsEnabled" Value="False"/>
                        <Setter Property="ToolTipService.ShowDuration" Value="2147483647"/>
                        <Setter Property="ToolTip">
                            <Setter.Value>
                                <ToolTip Placement="Relative" Content="{Binding Mode=OneWay}" ContentTemplate="{StaticResource VideoTooltipTemplate}"/>
                            </Setter.Value>
                        </Setter>
                        <EventSetter Event="MouseEnter" Handler="OnVideoItemMouseEnter"/>
                        <EventSetter Event="MouseLeave" Handler="OnVideoItemMouseLeave"/>
                        <EventSetter Event="MouseMove" Handler="OnVideoItemMouseMove"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260" Height="250" Margin="12" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="12"
                                BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                            <Setter Property="Opacity" Value="0.45"/>
                                            <Setter Property="BorderBrush" Value="#FFEF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <Grid Height="150" Margin="0,0,0,10" ClipToBounds="True">
                                    <Image Source="{Binding ThumbnailUri}" Stretch="UniformToFill"/>
                                    <TextBlock Text="Missing" Foreground="#FFEF4444" Background="#801B1B1B" Padding="6,2" Margin="8" FontWeight="SemiBold"
                                               HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,4" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding ReleaseLabel}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="{StaticResource StatusBarBrush}" Padding="16" Margin="24, 0, 24, 12" CornerRadius="12">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource PrimaryTextBrush}"/>
        </Border>
    </Grid>
</Window>
